<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.text.customalertdialogdemo.MainActivity">

    <TextView
        android:id="@+id/tv_dialog_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#de5e5e"
        android:text="仿ios中间弹框,标题/内容/两个按钮"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_dialog_orange"
        android:layout_marginTop="5dp"
        android:background="#F48F4A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="仿ios中间弹框,内容/两个按钮"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_dialog_yellow"
        android:layout_marginTop="5dp"
        android:background="#fade0a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="仿ios中间弹框,标题/两个按钮"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_dialog_green"
        android:layout_marginTop="5dp"
        android:background="#0bed07"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="仿ios中间弹框,标题加粗/内容加粗/两个按钮变色"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_dialog_cyan"
        android:layout_marginTop="5dp"
        android:background="#04efc4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="仿ios中间弹框,标题/内容/一个按钮"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_dialog_blue"
        android:layout_marginTop="5dp"
        android:background="#0410ef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="仿ios中间弹框,标题/内容/无按钮"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_dialog_purple"
        android:layout_marginTop="5dp"
        android:background="#ef04eb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="底部弹框,标题/内容/两个按钮"
        android:gravity="center"/>

</LinearLayout>
